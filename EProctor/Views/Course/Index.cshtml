@model CourseDetailsViewModel

<div class="container">
    <a asp-controller="Course" asp-action="Create"><h6 class="display-4">Add New Course</h6></a>
    <h3 class="display-4">Courses List</h3>
    <table class="table table-striped table-responsive">
        <thead>
            <tr class="bg-info">
                <th scope="col">Sr. No</th>
                <th scope="col">Course Code</th>
                <th scope="col">Course Title</th>
                <th scope="col">Description</th>
                <th scope="col">View</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var course in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <th scope="row">@course.CourseCode</th>
                        <td>@course.Title</td>
                        <td>@course.Description</td>
                        <td><a asp-controller="Course" asp-action="getcourse" asp-route-ccode="@course.CourseCode" class="btn btn-success ">View</a></td>
                        <td><a asp-action="EditCourse" asp-controller="Course" asp-route-ccode="@course.CourseCode" class="btn btn-primary ">Update</a></td>
                        <td><a href="#" class="btn btn-danger ">Delete</a></td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>