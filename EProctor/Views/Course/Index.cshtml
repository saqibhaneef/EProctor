@model IEnumerable<Course>

@{
    Layout = "_DashboardLayout";
    ViewBag.Title = "All Courses"; 
}


<div class="container">
    <a asp-controller="Course" asp-action="Create"><h6 class="display-4">Add New Course</h6></a>
    <h3 class="display-4">Courses List</h3>
    <table class="table table-striped table-responsive">
        <thead>
            <tr class="bg-info">
                <th scope="col">Sr. No</th>
                <th scope="col">Course Code</th>
                <th scope="col">Course Title</th>
                <th scope="col">Description</th>
                <th scope="col">View</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var course in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <th scope="row">@course.Id</th>
                        <td>@course.Title</td>
                        <td>@course.Description</td>
                        <td><a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-success ">View</a></td>
                        <td><a asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary ">Update</a></td>
                        <td><a asp-controller="Course" asp-action="Delete" class="btn btn-danger ">Delete</a></td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
