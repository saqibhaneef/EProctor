@model CourseDeleteViewModel

@{ 
    ViewBag.Title = "Delete";
} 

<div class="card">
    <h5 class="card-header">Delete this Course</h5>
    <form method="post" asp-action="Delete">
        <div class="card-body">
            <div class="card-title">
                <div class="card-text">
                    <h5 class="navbar-text">@Model.Title</h5>
                    <small class="text-body text-secondary">@Model.Id</small>
                </div>
            </div>
            <p class="card-text">@Model.Description</p>
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
            </div>
            <a asp-action="Index" asp-controller="Course" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>