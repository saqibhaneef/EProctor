@model IEnumerable<IdentityRole>

@{ 
    ViewBag.Title = "All Roles";
}
<div class="container">
    <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary mb-3">Add Role</a>

    @if (Model.Any())
    {
        foreach (var role in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditRole" 
                       asp-route-id="@role.Id" class="btn btn-primary">Edit
                    </a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No Roles Created Yet
            </div>
            <div class="card-body">
                <h5 class="card-title">Use button below to create role</h5>
                <a asp-controller="Administration" asp-action="CreateRole" class="btn btn-primary">Create Role</a>
            </div>
        </div>
    }

</div>