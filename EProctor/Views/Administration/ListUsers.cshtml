@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

@{ if (@Model.Any())
    {
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary mb-3">Add new user</a>
        <h3 class="display-4">All Users</h3>
        <table class="table table-striped table-responsive">
            <thead>
                
                <tr class="bg-info">
                    <th scope="col">Sr. No</th>
                    <th scope="col">User Id</th>
                    <th scope="col">User Name</th>
                    <th scope="col">View</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var user in Model)
                    {
                        i++;
                                <tr>
                                    <th scope="row">@i</th>
                                    <th scope="row">@user.Id</th>
                                    <td>@user.UserName</td>
                                    <td><a class="btn btn-success">View</a></td>
                                    <td>
                                        <a asp-controller="Administration" asp-action="EditUser"
                                           asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                    </td>
                                    <td>
                                        <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                                            <button type="submit" onclick="return confirm('Are you sure to delete user: @user.UserName ?')" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                
                                    
                                
                    
                    }
                }

            </tbody>
        </table>


                    }
                    else
                    {
                        <h1>No user Registered</h1>
                    }

}  